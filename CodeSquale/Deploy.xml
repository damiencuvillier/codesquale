<!-- Parsing tasks -->

<!--
	Ressources : 
	http://ant.apache.org/manual/CoreTasks/style.html
-->
<project name="CodeSquale BuildFile" default="build" basedir=".">
	<description>
		Build File
		
		Build dist directory
	</description>
	<target name="build">
		<delete dir="dist" />
		<mkdir dir="dist" />
		<mkdir dir="dist/xml" />
		<copy todir="dist/xml/" >
			<fileset dir="xml">
				<include name="X*/*"/>
				<include name="AntScript.xml"/>
				<include name="style.css"/>				
			</fileset>
		</copy>
		
		<mkdir dir="dist/lib/" />
		
		<copy toDir="dist/lib">
			<fileset dir="libs">
				<include name="*.jar" />
				<include name="antAdditionnalLibs/*.jar" />
			</fileset>
		</copy>
		<copy toDir="dist/">
			<fileset dir="jars">
				<include name="*.jar" />
			</fileset>
		</copy>
		<copy toDir="dist">
			<fileset dir="src">
				<include name="*.xml" />
			</fileset>
		</copy>
		
		<zip file="CodeSquale.zip">
			<fileset dir="dist">
				<include name="**/*" />
			</fileset>
		</zip>
			
		<delete dir="dist" />
	</target>
	<target name="buildJar">
		<mkdir dir="jars"/>
		<jar destFile="jars/CodeSquale.jar" basedir="bin"
			includes="com/codesquale/**"
			excludes="com/codesquale/view/**"
			/>
		<jar destFile="jars/CodeSquale-gui.jar" basedir="bin"
			includes="com/codesquale/view/**"
			/>
	</target>
</project>



	
